@model HomeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <a asp-action="Novo" asp-controller="Funcionario" id="novo-flutuante" >
        <p class="plus">+</p>
    </a>

    <div class="row">
        <div class="card col-md-6 col-lg-3 lista-leitura" id="coluna-paraler" data-id="Ti">
            <h4 class="card-header">Ti - Tecnologia da Informação</h4>
            <ul class="">
                @foreach (var list in Model.TI)
                {
                    <partial name="~/Views/Shared/Livro.cshtml" model="list" />
                }
            </ul>
        </div>
        <!--fim #coluna-paraler-->

        <div class="card col-md-6 col-lg-3 lista-leitura" id="coluna-lendo" data-id="Marketing">
            <h4 class="card-header">Depto. Marketing</h4>
            <ul class="list-group">
                @foreach (var list in Model.Marketing)
                {
                    <partial name="~/Views/Shared/Livro.cshtml" model="list" />
                }
            </ul>
        </div>
        <!--fim #coluna-lendo-->

        <div class="card col-md-6 col-lg-3 lista-leitura" id="coluna-lidos" data-id="Vendas">
            <h4 class="card-header">Depto. de Vendas</h4>
            <ul class="">
                @foreach (var list in Model.Vendas)
                {
                    <partial name="~/Views/Shared/Livro.cshtml" model="list" />
                }
            </ul>
        </div>
        <!--fim #coluna-lidos-->
    </div>



</main>